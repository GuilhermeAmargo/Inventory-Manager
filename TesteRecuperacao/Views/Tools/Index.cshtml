@model TesteRecuperacao.Models.ToolCategoryViewModel

@{
    ViewData["Title"] = "Estoque";
}

<h1 class="mb-4">Estoque de Ferramentas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Nova Ferramenta</a>
</p>

<form asp-controller="Tools" asp-action="Index" method="get">
    <p>
        <select asp-for="ToolCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        <label>Name: <input type="text" name="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Categoria</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tools)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>